{
  "name": "frpong",
  "version": "0.0.1-alpha",
  "description": "frpong",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./output",
    "bundle": "npm run clean && pulp --psc-package build --optimise --to ./output/purescript-bundle.js && cross-env NODE_ENV=production webpack --progress --config webpack.prod.js && cp -R ./site/static ./dist/ && cp ./site/_redirects ./dist/",
    "dev": "npm run build && cross-env NODE_ENV=dev-auto-reload webpack-dev-server --progress --open --config webpack.dev.js",
    "build": "pulp --psc-package build",
    "dist:server": "http-server ./dist -o"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/app/",
      "<rootDir>/src/"
    ]
  },
  "author": "David Komer",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/node": "10.9.4",
    "chokidar": "2.0.4",
    "clean-webpack-plugin": "0.1.19",
    "cors": "^2.8.4",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "fast-sass-loader": "1.4.6",
    "fork-ts-checker-webpack-plugin": "0.4.9",
    "glob": "7.1.3",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "install": "^0.12.1",
    "jest": "23.5.0",
    "node-sass": "4.9.3",
    "npm": "^6.4.1",
    "npm-run-all": "4.1.3",
    "null-loader": "0.1.1",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "serve-index": "^1.9.1",
    "shelljs": "0.8.2",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.0",
    "ts-jest": "23.1.4",
    "ts-loader": "4.5.0",
    "ts-node": "7.0.1",
    "ts-shader-loader": "1.0.5",
    "tsconfig-paths": "3.5.0",
    "typescript": "3.0.3",
    "uglify-js": "3.4.9",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.17.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.7",
    "webpack-merge": "4.1.4",
    "worker-loader": "2.0.0"
  },
  "dependencies": {
    "pure3d": "^2.0.0"
  }
}
