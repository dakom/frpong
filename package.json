{
  "name": "frpong",
  "version": "0.0.1-alpha",
  "description": "frpong",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./output && rimraf ./target",

    "bundle": "npm run build:prod && cross-env NODE_ENV=production webpack --progress --config webpack.prod.js && cp -R ./site/static ./dist/ && cp ./site/_redirects ./dist/",
    "dev": "npm run build:dev && npm-run-all -p _dev:webpack-server _dev:watch:rust",
    "_dev:webpack-server": "cross-env NODE_ENV=dev-auto-reload webpack-dev-server --progress --open --config webpack.dev.js",
    "_dev:watch:rust": "chokidar \"**/*.rs\" -c \"npm run build:rust:dev\"",

    "build:dev": "npm run build:purs:dev && npm run build:rust:dev",
    "build:prod": "npm run clean && npm run build:purs:prod && npm run build:rust:prod",

    "build:purs:dev": "pulp --psc-package build && echo \"export * from './Main/index.js'\" > ./output/index.js",
    "build:purs:prod": "pulp --psc-package build --skip-entry-point --optimise --to ./output/index.js && echo \"module.exports = PS.Main\" >> ./output/index.js",

    "build:rust:prod": "cargo +nightly build --target wasm32-unknown-unknown --release && npm run rust:bindgen:release",
    "build:rust:dev": "cargo +nightly build --target wasm32-unknown-unknown && npm run rust:bindgen:dev",
    "rust:bindgen:dev": "wasm-bindgen target/wasm32-unknown-unknown/debug/frpong.wasm --out-dir ./target",
    "rust:bindgen:release": "wasm-bindgen target/wasm32-unknown-unknown/release/frpong.wasm --out-dir ./target",

    "test:jest": "jest test/typescript-tests",
    "test:pulp": "pulp test",

    "dist:server": "http-server ./dist -o"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/app/",
      "<rootDir>/src/"
    ]
  },
  "author": "David Komer",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "23.3.4",
    "@types/node": "10.11.5",
    "chokidar": "2.0.4",
    "clean-webpack-plugin": "0.1.19",
    "cors": "^2.8.4",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "fast-sass-loader": "1.4.6",
    "fork-ts-checker-webpack-plugin": "0.4.10",
    "glob": "7.1.3",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "http-server": "^0.11.1",
    "install": "^0.12.1",
    "jest": "23.6.0",
    "node-sass": "4.9.3",
    "npm": "^6.4.1",
    "npm-run-all": "4.1.3",
    "null-loader": "0.1.1",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "serve-index": "^1.9.1",
    "shelljs": "0.8.2",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.1",
    "terser": "3.10.0",
    "terser-webpack-plugin": "1.1.0",
    "ts-jest": "23.10.4",
    "ts-loader": "5.2.1",
    "ts-node": "7.0.1",
    "ts-shader-loader": "1.0.5",
    "tsconfig-paths": "3.6.0",
    "typescript": "3.1.1",
    "wasm-loader": "^1.3.0",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.9",
    "webpack-merge": "4.1.4",
    "worker-loader": "2.0.0"
  },
  "dependencies": {
    "gl-matrix": "^2.8.1",
    "sodiumjs": "^3.0.0",
    "webfontloader": "1.6.28"
  }
}
